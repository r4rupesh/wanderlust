<%layout("/layouts/boilerplate")%>
<style>
  #filters {
    display: flex;
    margin-top: 1.5rem;
    text-align: center;
    align-items: center;
  }
  .filter {
    margin-right: 2.2rem;
    opacity: 0.8;
    &:hover {
      opacity: 1;
      cursor: pointer;
    }
  }
  .filter p {
    font-size: small;
  }
  .filter i {
    font-size:x-large;
  }
  .tax-info {
    display: none;
  }
  .tax-toggle{
    border: 1px solid rgba(0, 0, 0, 0.250);
    font-size: medium;
    display: flex;
    align-items: center;
    justify-content: center;
  height: 3.5rem;
  width: 18rem;
  /* flex-wrap: wrap; */
    border-radius: 1rem;
    margin-left: 3.5rem;
    &:hover{
      border: 1px solid black;
    }
    

  }
</style>
<body>
  <div id="filters">
    <div class="filter">
      <i class="fa-solid fa-fire"></i>
      <p>Trending</p>
    </div>

    <div class="filter">
      <i class="fa-sharp fa-solid fa-bed"></i>
      <p>Rooms</p>
    </div>

    <div class="filter">
      <i class="fa-solid fa-ship"></i>
      <p>Boats</p>
    </div>

    <div class="filter">
      <i class="fa-solid fa-umbrella-beach"></i>
      <p>Beach</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-water"></i>
      <p>Lake</p>
    </div>

    <div class="filter">
      <i class="fa-brands fa-fort-awesome-alt"></i>
      <p>Castles</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-mountain-sun"></i>
      <p>Mountain</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-golf-ball-tee"></i>
            <p>Golfing</p>
    </div>

    <div class="filter">

      <i class="fa-solid fa-person-swimming"></i>
      <p>Amazing pools</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-snowflake"></i>
      <p>Arctic</p>
    </div>

    <div class="filter">
      <i class="fa-solid fa-city"></i>
      <p>Top Cities</p>
    </div>
    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          role="switch"
          id="flexSwitchCheckDefault"
        />
        <label class="form-check-label" for="flexSwitchCheckDefault"
          >Display total after taxes</label
        >
      </div>
    </div>
  </div>
  <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-2 row-cols-xs-1 mt-3">
    <%for(listing of allListing){%>
    <a href="/listing/<%=listing._id%>" class="text-decoration-none">
      <div class="card listing-card">
        <img
          src="<%=listing.image.url%>"
          class="card-img-top"
          alt="Listing image"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>

        <div class="card-body">
          <p class="card-text">
            <b><%=listing.title%></b>
            <br />
            &#8377;<%=listing.price.toLocaleString("en-IN")%>/night
            <i class="tax-info">&nbsp; &nbsp;+18% GST</i>
          </p>
        </div>
      </div>
      <%}%>
    </a>
  </div>
</body>

<script>
  let toggleSwitch = document.getElementById("flexSwitchCheckDefault");
  let taxInfo = document.getElementsByClassName("tax-info");
  toggleSwitch.addEventListener("click", () => {
    for (info of taxInfo) {
    if (info.style.display !== "inline")
    info.style.display = "inline";
    else {
      info.style.display = "none";
      }
      }
  });
</script>
